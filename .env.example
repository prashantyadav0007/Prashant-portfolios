# =============================================
# Portfolio Environment Variables
# =============================================
# Copy this file to .env.local for local development
# Set these in Netlify dashboard for production

# =============================================
# BUILD OPTIMIZATION
# =============================================

# Disable ESLint plugin during build (faster builds, prevents warnings from blocking deployment)
DISABLE_ESLINT_PLUGIN=true

# Generate source maps (set to false for production to reduce bundle size and hide source code)
# Development: true | Production: false
GENERATE_SOURCEMAP=false

# Inline webpack runtime chunk into HTML (reduces HTTP requests)
INLINE_RUNTIME_CHUNK=true

# Treat warnings as warnings, not errors (prevents build failures from non-critical issues)
CI=false

# Image inline size limit in bytes (images smaller than this are embedded in JS)
# Default: 10000 (10KB)
IMAGE_INLINE_SIZE_LIMIT=10000

# =============================================
# OPTIONAL: ANALYTICS & TRACKING
# =============================================

# Google Analytics 4 Measurement ID
# Get from: https://analytics.google.com/
# REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager ID
# REACT_APP_GTM_ID=GTM-XXXXXXX

# =============================================
# OPTIONAL: FORM SERVICES
# =============================================

# Netlify Forms (already configured in HTML, no env var needed)

# Google reCAPTCHA v3 Site Key (for spam protection)
# Get from: https://www.google.com/recaptcha/admin
# REACT_APP_RECAPTCHA_SITE_KEY=your_site_key_here

# FormSpree endpoint (alternative to Netlify Forms)
# REACT_APP_FORMSPREE_ID=your_form_id

# =============================================
# OPTIONAL: BLOG INTEGRATION
# =============================================

# Hashnode Blog Integration
REACT_APP_HASHNODE_PUBLICATION_HOST=rnr-still-figuring-things-out.hashnode.dev
# Optional: Add API token for higher rate limits (not required for public posts)
# REACT_APP_HASHNODE_API_TOKEN=your-token-here

# =============================================
# OPTIONAL: ERROR TRACKING
# =============================================

# Sentry DSN (for error monitoring)
# Get from: https://sentry.io/
# REACT_APP_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# =============================================
# DEPLOYMENT CONFIGURATION
# =============================================

# Public URL (only needed if deploying to subdirectory, not root)
# Leave empty for root deployment
# PUBLIC_URL=

# Node environment (automatically set by Netlify)
# NODE_ENV=production

# =============================================
# DEVELOPMENT ONLY
# =============================================

# Port for local development server (optional, default: 3000)
# PORT=3000

# Open browser automatically on start
# BROWSER=chrome

# =============================================
# NOTES
# =============================================
# 1. Variables prefixed with REACT_APP_ are accessible in your React code
# 2. Other variables are only used during build time
# 3. Never commit .env files with real values to Git
# 4. Set production values in Netlify dashboard under Site Settings > Environment Variables
